<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="film"
            type="com.example.batmanfilms.models.ResponseFilm" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_header_image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="W,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/batman_header" />


        <ImageView
            android:id="@+id/image_view_poster"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@id/iv_header_image"
            app:layout_constraintDimensionRatio="W,25:34"
            app:layout_constraintStart_toStartOf="@id/gl_left_vertical"
            app:layout_constraintTop_toBottomOf="@id/iv_header_image"
            tools:srcCompat="@drawable/batman_place_holder" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_left_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@{film.title}"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toStartOf="@id/iv_bookmark"
            app:layout_constraintStart_toEndOf="@id/image_view_poster"
            app:layout_constraintTop_toBottomOf="@id/iv_header_image"
            tools:text="@string/template_movie_title" />

        <TextView
            android:id="@+id/text_view_file_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="@{film.released}"
            app:layout_constraintEnd_toEndOf="@id/gl_right_vertical"
            app:layout_constraintStart_toStartOf="@id/tv_movie_title"
            app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
            tools:text="@string/template_movie_released" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_right_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96" />


        <ImageView
            android:id="@+id/iv_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_bookmark"
            app:layout_constraintEnd_toStartOf="@id/gl_right_vertical"
            app:layout_constraintStart_toEndOf="@id/tv_movie_title"
            app:layout_constraintTop_toTopOf="@id/tv_movie_title" />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/b_horizontal_details"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="text_view_file_year,image_view_poster" />





        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_film_time"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:drawablePadding="50dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/pink"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/card_view_imdb"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@id/gl_left_vertical"
            app:layout_constraintTop_toBottomOf="@id/b_horizontal_details"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time"
                android:padding="10dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_imdb"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/teal_200"
            app:cardCornerRadius="50dp"
            app:layout_constraintEnd_toStartOf="@id/card_view_tomatoes"
            app:layout_constraintStart_toEndOf="@id/card_view_film_time"
            app:layout_constraintTop_toBottomOf="@id/b_horizontal_details">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/imdb"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_tomatoes"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/teal_200"
            app:cardCornerRadius="50dp"
            app:layout_constraintEnd_toStartOf="@id/card_view_metacritic"
            app:layout_constraintStart_toEndOf="@id/card_view_imdb"
            app:layout_constraintTop_toBottomOf="@id/b_horizontal_details" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tomato"
                android:padding="10dp"
                android:layout_gravity="center"
                />



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_metacritic"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp" app:cardBackgroundColor="@color/teal_200"
            app:cardCornerRadius="50dp"
            app:layout_constraintEnd_toStartOf="@id/gl_right_vertical"
            app:layout_constraintStart_toEndOf="@id/card_view_tomatoes"
            app:layout_constraintTop_toBottomOf="@id/b_horizontal_details" >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/metacritic"/>




        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_film_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@{film.runtime}"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/card_view_film_time"
            app:layout_constraintStart_toStartOf="@id/card_view_film_time"
            app:layout_constraintTop_toBottomOf="@id/card_view_film_time"
            tools:text="152 min" />


        <TextView
            android:id="@+id/text_view_imdb_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textAlignment="center"
            android:text="@{film.imdbRating}"
            app:layout_constraintEnd_toEndOf="@id/card_view_imdb"
            app:layout_constraintStart_toStartOf="@id/card_view_imdb"
            app:layout_constraintTop_toBottomOf="@id/card_view_imdb"
            tools:text="7.9" />


        <TextView
            android:id="@+id/text_view_tomatoes_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@{film.ratings.get(1).value}"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/card_view_tomatoes"
            app:layout_constraintStart_toStartOf="@id/card_view_tomatoes"
            app:layout_constraintTop_toBottomOf="@id/card_view_tomatoes"
            tools:text="71%" />


        <TextView
            android:id="@+id/text_view_metacritic_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@{film.metascore}"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/card_view_metacritic"
            app:layout_constraintStart_toStartOf="@id/card_view_metacritic"
            app:layout_constraintTop_toBottomOf="@id/card_view_metacritic"
            tools:text="72" />


        <View
            android:id="@+id/divider_below_chain"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/divider_gray"
            app:layout_constraintEnd_toEndOf="@id/gl_right_vertical"
            app:layout_constraintStart_toStartOf="@id/gl_left_vertical"
            app:layout_constraintTop_toBottomOf="@id/b_below_chain" />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/b_below_chain"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="text_view_film_time,text_view_metacritic_rate,text_view_tomatoes_rate,text_view_imdb_rate" />

        <TextView
            android:id="@+id/text_view_film_plot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textAlignment="inherit"
            android:textSize="18sp"
            android:text="@{film.plot}"
            app:layout_constraintEnd_toEndOf="@id/gl_right_vertical"
            app:layout_constraintStart_toStartOf="@id/gl_left_vertical"
            app:layout_constraintTop_toBottomOf="@id/divider_below_chain"
            tools:text="@string/template_movie_description" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>